extends layout.pug 

block mainContent
    .all-posts-container
        each post in posts
            div(id=`post-container-${post.id}`).single-post-container
                h2= post.title
                p= post.content
                if loggedInUser === post.breadditorId
                    button(class='edit-btn' id=`edit-post-${post.id}`) Delete